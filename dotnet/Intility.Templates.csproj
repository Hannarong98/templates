<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageType>Template</PackageType>
    <PackageVersion>0.3.0</PackageVersion>
    <PackageId>Intility.Templates</PackageId>
    <Title>Intility Templates</Title>
    <Authors>Intility</Authors>
    <Description>Templates to use when creating an Intility application.</Description>
    <PackageTags>dotnet-new;templates;intility</PackageTags>
    <TargetFramework>netstandard2.0</TargetFramework>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>

    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <NoWarn>$(NoWarn);NU5128</NoWarn>
    <IncludeContentInPack>true</IncludeContentInPack>
    <IncludeBuildOutput>false</IncludeBuildOutput>
    <ContentTargetFolders>content</ContentTargetFolders>
    <NoDefaultExcludes>true</NoDefaultExcludes>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="templates\**\*" Exclude="templates\**\bin\**;templates\**\obj\**;templates\**\.vscode\**" />
    <Content Include="templates\iwebapiproject\**\*" Exclude="templates\iwebapiproject\.gitlab-ci.yml;templates\iwebapiproject\README.md;templates\iwebapiproject\.template.config\**" Pack="true" PackagePath="content\templates\iwebapi\Company.WebApplication1" />
    <None Include="LICENSE" Pack="true" PackagePath=""/>
    <Compile Remove="**\*" />
  </ItemGroup>

</Project>
